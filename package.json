{
  "name": "abc-racing",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run tailwind:build && remix build",
    "dev": "npm-run-all --parallel tailwind:watch dev:remix",
    "dev:remix": "remix dev",
    "postinstall": "remix setup node",
    "prettier": "prettier \"**/*.{js,jsx,ts,tsx,json,md,mdx,html,css}\"",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "typescript:check": "tsc --noEmit",
    "tailwind": "npx tailwindcss -i app/styles/global.css -o app/styles/generated/tailwind.css",
    "tailwind:watch": "npm run tailwind && npm run tailwind -- --watch",
    "tailwind:build": "npm run tailwind -- --minify",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "jest"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.4",
    "@remix-run/serve": "^1.0.4",
    "@remix-run/vercel": "^1.1.1",
    "@tailwindcss/forms": "^0.3.4",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@remix-run/dev": "^1.0.4",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-interactions": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.9",
    "@storybook/testing-library": "^0.0.7",
    "@storybook/testing-react": "^1.2.2",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@tidusia/eslint-config": "^2.2.1",
    "@tidusia/prettier-config": "^2.1.0",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.5",
    "jest": "^27.3.1",
    "jest-axe": "^5.0.1",
    "lint-staged": "^11.2.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "prettier": "^2.5.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
